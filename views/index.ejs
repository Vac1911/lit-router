<!DOCTYPE html>
<html>

<head>
    <title>Home</title>
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900&amp;display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link href="/styles.css" rel="stylesheet">
    <script defer src="/index.js"></script>
</head>

<body style="visibility: hidden; background-color: var(--dark-1); position: relative">
    <div id="app">
        <%- include('include/navigation'); -%>
        <hero-section>
            <h1 class="display-5 fw-bold">Welcome!</h1>
            <div class="col-lg-6 mx-auto">
                <p class="lead mb-5">Text go here</p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button type="button" class="btn btn-primary btn-lg px-4 me-sm-3">Learn More</button>
                    <button type="button" class="btn btn-secondary btn-lg px-4">Signup</button>
                </div>
            </div>
        </hero-section>
        <article-list>
            <div class="container">
                <% articles.forEach(article => { %>
                    <div class="d-flex g-0 border-dark-3 rounded overflow-hidden flex-md-row m-0 shadow-sm position-relative" style="background-color: var(--dark-2);">
                        <div class="flex-grow-1 px-4 py-3 d-flex flex-column position-static" style="gap: 1rem">
                            <div class="">
                                <span class="badge bg-primary">World</span>
                            </div>
                            <div class="">
                                <h2 class="h4 mb-0">
                                    <%= article.title %>
                                </h2>
                                <div class="text-muted small">
                                    <%= DateTime.fromSeconds(article.created_at).toRelative() %>
                                </div>
                            </div>
                            <p class="mb-0">Article <%= article.id %> summary go here.</p>
                            <div class="mt-auto">
                                <router-link href="/articles/<%= article.id %>" class="stretched-link">
                                    Continue Reading
                                </router-link>
                            </div>
                        </div>
                        <div class="col-auto d-none d-lg-block">
                            <svg class="bd-placeholder-img" width="200" height="auto" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="black" opacity="0.1"></rect>
                                <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                            </svg>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </article-list>
    </div>
</body>

</html>